<script>
    function showSection(section) {
        document.getElementById('home-section').style.display = section==='home'?'block':'none';
        document.getElementById('candidates-section').style.display = section==='candidates'?'block':'none';
        document.getElementById('signup-section').style.display = section==='signup'?'block':'none';
        document.getElementById('login-section').style.display = section==='login'?'block':'none';
        document.querySelectorAll('.candidate-detail').forEach(el=>el.style.display='none');
    }

    function showCandidate(name){
        document.querySelectorAll('.candidate-detail').forEach(el=>el.style.display='none');
        document.getElementById(name).style.display='block';
    }

    // Mock login credentials
    const candidates = {
        "Jordan Smith":"pass123",
        "Maria Lopez":"health456",
        "Andre Johnson":"school789"
    };

    document.getElementById('loginForm').addEventListener('submit',function(e){
        e.preventDefault();
        const name = document.getElementById('candidateName').value.trim();
        const pw = document.getElementById('password').value.trim();
        const loginMsg = document.getElementById('loginMessage');

        if(candidates[name] && candidates[name]===pw){
            loginMsg.textContent=`Welcome, ${name}! You can now edit your profile below.`;
            showCandidate(name.toLowerCase().split(' ')[0]);
            document.getElementById(`edit-${name.toLowerCase().split(' ')[0]}`).style.display='block';
        } else {
            loginMsg.textContent="Invalid credentials. Try again.";
        }

        this.reset();
    });

    function saveProfile(candidate){
        const textarea = document.getElementById(`edit${candidate.charAt(0).toUpperCase() + candidate.slice(1)}Text`);
        if(textarea && textarea.value.trim()!==""){
            alert(`Profile update for ${candidate} saved (mock).`);
            textarea.value="";
        } else {
            alert("Enter text to save.");
        }
    }

    document.getElementById('signupForm').addEventListener('submit',function(e){
        e.preventDefault();
        const name=document.getElementById('name').value;
        const email=document.getElementById('email').value;
        document.getElementById('message').textContent=`Thanks, ${name}! We'll keep you updated at ${email}.`;
        this.reset();
    });

    // Show home section by default
    showSection('home');
</script>
</body>
